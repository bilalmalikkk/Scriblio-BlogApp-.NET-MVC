<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Scriblio</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Bootstrap Icons CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BlogApp.styles.css" asp-append-version="true" />
</head>
<body style="background-color: #f8f9fa; background-image: url('https://www.transparenttextures.com/patterns/sketchy.png'); background-repeat: repeat; background-attachment: fixed;">

    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom shadow-sm fixed-top">
            <div class="container-fluid">
                <div class="d-flex flex-column">
                    <a class="navbar-brand fw-bold mb-0" asp-area="" asp-controller="Home" asp-action="Index">Scriblio</a>
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 d-flex gap-3 align-items-center">
                        <li class="nav-item">
                            <a class="nav-link fw-semibold text-primary" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-semibold text-primary" asp-area="" asp-controller="Blog" asp-action="Index">Blogs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-semibold text-primary" asp-area="" asp-controller="About" asp-action="Index">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-semibold text-primary" asp-area="" asp-controller="Contact Us" asp-action="Index">Contact Us</a>
                        </li>
                    </ul>
                </div>

                @if (User.Identity.IsAuthenticated)
                {
                    <div class="d-flex align-items-center gap-3 px-3 py-2">
                        <span class="mb-0">@User.Identity.Name!</span>
                        <a asp-area="Identity" asp-page="/Account/Logout" class="btn btn-outline-secondary">Logout</a>
                    </div>
                }
                else
                {
                    <div class="d-flex gap-2 px-3 py-2">
                        <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-primary">Login</a>
                        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary text-white">Register</a>
                    </div>
                }
            </div>
        </nav>
    </header>

    <!-- Content container offset by navbar height (approx. 70px) -->
    <main class="container bg-white bg-opacity-75 rounded-4 shadow-sm p-4" style="margin-top: 90px;">
        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
