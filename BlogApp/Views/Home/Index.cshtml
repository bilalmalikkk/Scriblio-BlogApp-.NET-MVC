    ViewData["Title"] = "Home";
}

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4 mb-4">Welcome to BlogApp</h1>
        <p class="lead">Create, explore, and share your thoughts with the world.</p>

        @* <a href="/Blog/Index" class="btn btn-success btn-lg mt-4"> *@
