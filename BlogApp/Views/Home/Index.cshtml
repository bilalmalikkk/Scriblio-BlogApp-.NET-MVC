@{
    ViewData["Title"] = "Home";
}

<div class="text-center mb-5">
    <h1 class="display-4 fw-bold mb-3">Welcome to Scriblio</h1>
    <p class="lead text-muted mb-4">Create, explore, and share your thoughts with the world.</p>

    <a href="/Blog/Index" class="btn btn-success btn-lg me-2">
        <i class="bi bi-journal-text me-1"></i> View Blog Posts
    </a>
    <a href="/Blog/Create" class="btn btn-primary btn-lg">
        <i class="bi bi-pencil-square me-1"></i> Create New Post
    </a>
</div>

<hr class="my-5">

<div class="row text-center">
    <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm border-0">
            <div class="card-body">
                <i class="bi bi-pencil display-4 text-success mb-3"></i>
                <h3 class="text-success">Write</h3>
                <p class="text-muted">Express your ideas and publish engaging blog posts effortlessly.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm border-0">
            <div class="card-body">
                <i class="bi bi-compass display-4 text-primary mb-3"></i>
                <h3 class="text-success">Explore</h3>
                <p class="text-muted">Browse insightful content from other authors and get inspired.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm border-0">
            <div class="card-body">
                <i class="bi bi-people display-4 text-warning mb-3"></i>
                <h3 class="text-success">Connect</h3>
                <p class="text-muted">Engage with the community by commenting and sharing posts.</p>
            </div>
        </div>
    </div>
</div>
