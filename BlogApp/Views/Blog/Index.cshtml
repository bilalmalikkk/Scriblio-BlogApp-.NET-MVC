@model IEnumerable<BlogApp.Models.BlogPost>

@{
    ViewData["Title"] = "All Posts";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">All Blog Posts</h2>
        <a href="/Blog/Create" class="btn btn-primary">
            <i class="bi bi-plus-lg me-1"></i> Create New Post
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Created At</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var post in Model)
                {
                    <tr>
                        <td>@post.Title</td>
                        <td>@post.Author</td>
                        <td>@post.CreatedAt.ToShortDateString()</td>
                        <td class="text-end">
                            <a href="/Blog/Details/@post.Id" class="btn btn-sm btn-outline-primary me-1">View</a>
                            <a href="/Blog/Edit/@post.Id" class="btn btn-sm btn-outline-secondary me-1">Edit</a>
                            <a href="/Blog/Delete/@post.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
