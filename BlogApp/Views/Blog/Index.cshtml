@model IEnumerable<BlogApp.Models.BlogPost>

@{
    ViewData["Title"] = "All Posts";
}

<h2>All Blog Posts</h2>

<a href="/Blog/Create" class="btn btn-primary">Create New Post</a>

<table class="table mt-3">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Created At</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model)
        {
            <tr>
                <td>@post.Title</td>
                <td>@post.Author</td>
                <td>@post.CreatedAt.ToShortDateString()</td>
                <td>
                    <a href="/Blog/Details/@post.Id">View</a> |
                    <a href="/Blog/Edit/@post.Id">Edit</a> |
                    <a href="/Blog/Delete/@post.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
