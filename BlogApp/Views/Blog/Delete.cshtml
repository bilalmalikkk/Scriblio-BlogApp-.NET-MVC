@model BlogApp.Models.BlogPost
@{
    ViewData["Title"] = "Delete Post";
}

<div class="container py-4">
    <h2 class="text-danger mb-3">Delete Blog Post</h2>

    <div class="alert alert-warning" role="alert">
        <h5 class="mb-2">Are you sure you want to delete this post?</h5>
        <p class="mb-1"><strong>Title:</strong> @Model.Title</p>
        <p class="mb-1"><strong>Author:</strong> @Model.Author</p>
        <p class="mb-0"><strong>Date:</strong> @Model.CreatedAt.ToShortDateString()</p>
    </div>

    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">Yes, Delete</button>
            <a href="/Blog/Index" class="btn btn-outline-secondary">Cancel</a>
        </div>
    </form>
</div>
