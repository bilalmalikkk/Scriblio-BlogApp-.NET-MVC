@model BlogApp.Models.BlogPost
@{
    ViewData["Title"] = "Delete Post";
}

<h2>Delete Blog Post</h2>

<h4>Are you sure you want to delete this post?</h4>

<div>
    <strong>Title:</strong> @Model.Title<br />
    <strong>Author:</strong> @Model.Author<br />
    <strong>Date:</strong> @Model.CreatedAt.ToShortDateString()<br />
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="/Blog/Index" class="btn btn-secondary">Cancel</a>
</form>
